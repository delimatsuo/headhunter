{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../common"
    }
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "src/__tests__"]
}
