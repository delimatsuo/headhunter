{
  "name": "headhunter-functions",
  "version": "1.0.0",
  "description": "Cloud Functions for Headhunter AI - Data API and storage endpoints only (AI processing happens locally with Ollama)",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "ci:forbid-gemini": "! rg -n 'Gemini|gemini-' src || (echo 'Gemini references detected in Functions code. Enrichment is handled by Together processors.' && exit 1)",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google-cloud/aiplatform": "^3.35.0",
    "@google-cloud/firestore": "^7.10.0",
    "@google-cloud/storage": "^7.14.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@google/generative-ai": "^0.24.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.1.1",
    "pg": "^8.16.3",
    "pgvector": "^0.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "firebase-functions-test": "^3.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "cloud-functions",
    "firebase",
    "vertex-ai",
    "headhunter",
    "recruitment",
    "ai"
  ],
  "private": true
}
