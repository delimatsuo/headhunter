# Cloud SQL pgvector Configuration
# Copy this file to .env and fill in your actual values

# Feature flag for pgvector migration
USE_PGVECTOR=false

# Cloud SQL Connection Configuration
PGVECTOR_HOST=localhost
PGVECTOR_PORT=5432
PGVECTOR_DATABASE=headhunter
PGVECTOR_USER=postgres
PGVECTOR_PASSWORD=your_password_here

# SSL Configuration (set to 'require' for Cloud SQL)
PGVECTOR_SSL_MODE=disable

# Connection Pool Settings
PGVECTOR_MAX_CONNECTIONS=20
PGVECTOR_IDLE_TIMEOUT_MILLIS=30000

# For Cloud SQL Proxy (if using)
# PGVECTOR_HOST=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
# PGVECTOR_SSL_MODE=disable

# For Cloud SQL Private IP (if using)
# PGVECTOR_HOST=10.x.x.x
# PGVECTOR_SSL_MODE=require