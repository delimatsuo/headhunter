rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload resume files
    match /resumes/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to access processed profiles
    match /profiles/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Public read access for web assets
    match /public/{allPaths=**} {
      allow read: if true;
    }
  }
}