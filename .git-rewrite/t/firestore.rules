rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own data
    match /candidates/{candidateId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write search results
    match /searches/{searchId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write job descriptions
    match /job_descriptions/{jobId} {
      allow read, write: if request.auth != null;
    }
    
    // Vector embeddings collection - read only for authenticated users
    match /embeddings/{embeddingId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.created_by;
    }
  }
}